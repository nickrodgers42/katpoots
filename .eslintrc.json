{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "curly": ["error", "all"],
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "no-var": ["error"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
